</style>

<script src="./static/examplesController.js"></script>

    <style>
      .eac-square input, .eac-round input {
        background-image: url("images/icon_search.png");
        background-repeat: no-repeat;
        background-position: right 10px center;
      }
		</style>
		
  </head>

  <body>

<div class="container themes-container ng-scope" data-ng-controller="examplesCtrl">

	<div class="row">

	<h3 class="page-header" id="examples-ddg">जैन सिद्धांत प्रवेशिका में 'खोजें'</h3>

		<div class="easy-autocomplete" style="width: 50px;"><input id="example-ddg" placeholder="{{.Query}}"
			autocomplete="off"><div class="easy-autocomplete-container"
			id="eac-container-example-ddg"><ul></ul></div></div>
		<button class="btn btn-eac  ng-binding" id="search-button">Search</button>

		<script>
		var options = {	
			url: function(phrase) {
				if (phrase != "") {
					return "/q?prefix=" + phrase
				}
			},

			getValue: "Word",

			ajaxSettings: {
				dataType: "jsonp"
			},
			requestDelay: 100,
			// theme: "round"
		};

		$("#example-ddg").easyAutocomplete(options);

		</script>

	<script type="text/javascript">
	document.getElementById("search-button").onclick = function () {
			var query_word = document.getElementById("example-ddg").value;
			location.href = "/q?query=" + query_word;
	};
  </script>

</div>

<!-- Search results come here -->

	<h3 class="page-header" id="examples-ddg">Search Results: {{.Query}}</h3>

	{{range .Results}}
		<h4>Q. {{.Chapter}}.{{.Number}}</h4>
		<p><b>Q: </b>{{.Question}}</p>
		<p><b>A: </b>{{.Answer}}</p>
		<br>
	{{end}}

